
.chat-bar-collapsible {
    /* to fix it at bottom of page */
    position: fixed;
    bottom: 0;
    right: 50px;
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
}

.collapsible {
    /* open the chatbot section */
    background-color: rgb(82, 151, 255);
    color: white;
    cursor: pointer;
    /* so that user knows its clickable */
    padding: 18px;
    width: 350px;
    text-align: left;
    outline: none;
    font-size: 18px;
    border-radius: 10px 10px 0px 0px;
    border: 3px solid white;
    border-bottom: none;
}

.content {
    max-height: 0;
    /* so that chatbot stays down until clicked on */
    overflow: hidden;
    /* Chatbot is hidden under the topic */
    transition: max-height 0.2s ease-out;
    background-color: #f1f1f1;
}

.full-chat-block {
    /* to show all elements inside chatblock once clicked */
    width: 350px;
    background: white;
    text-align: center;
    overflow: auto;
    scrollbar-width: none;
    height: max-content;
    transition: max-height 0.2s ease-out;
}

.outer-container {
    /* so that chatbot has a minimal height and does not shrink.
    EX- if only one message is entered in the chatblock it will still not collapse until closed specificaly  */
    min-height: 500px;
    bottom: 0%;
    position: relative;
}

.chat-container {
    /* so that the chat container only stays to a maximum height 
    and does not take up the whole page .
    also to get the scrolling behavior in the chat. */
    max-height: 500px;
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    scroll-behavior: smooth;
    hyphens: auto;
}

.chat-container::-webkit-scrollbar {
    /* pseudo element : for the scroll bar 
    (to make sure that it remains hidden inside the chatbox)*/
    display: none;
}

.chat-bar-input-block {
    /* for the input section */
    display: flex;
    /* so that all items inside are venly distributed */
    float: left;
    box-sizing: border-box;
    justify-content: space-between;
    width: 100%;
    align-items: center;
    background-color: rgb(235, 235, 235);
    border-radius: 10px 10px 0px 0px;
    padding: 10px 0px 10px 10px;
}

.chat-bar-icons {
    /* for the icons in input section */
    display: flex;
    justify-content: space-evenly;
    box-sizing: border-box;
    width: 25%;
    float: right;
    font-size: 20px;
}

#chat-icon:hover {
    /* to highlight input icons */
    opacity: .7;
}


/* Chat bubbles */

#userInput {
    /* to maintain chatblock and input section ratio */
    width: 75%;
}

.input-box {
    /* To iinput message */
    float: left;
    border: none;
    box-sizing: border-box;
    width: 100%;
    border-radius: 10px;
    padding: 10px;
    font-size: 16px;
    color: #000;
    background-color: white;
    outline: none
}

.userText {
    /* to define the text i.e. inside when we send the message */
    color: white;
    font-family: Helvetica;
    font-size: 16px;
    font-weight: normal;
    text-align: right;
    clear: both;
}

.userText span {
    /* to define the box on the outside of mesaage */
    line-height: 1.5em;
    display: inline-block;
    background: #5ca6fa;
    padding: 10px;
    border-radius: 8px;
    border-bottom-right-radius: 2px;
    max-width: 80%;
    margin-right: 10px;
    animation: floatup .5s forwards
}

.botText {
    /* for bot messages */
    color: #000;
    font-family: Helvetica;
    font-weight: normal;
    font-size: 16px;
    text-align: left;
}

.botText span {
    /* for bot message container */
    line-height: 1.5em;
    display: inline-block;
    background: #e0e0e0;
    padding: 10px;
    border-radius: 8px;
    border-bottom-left-radius: 2px;
    max-width: 80%;
    margin-left: 10px;
    animation: floatup .5s forwards/* animation for new text */
}

@keyframes floatup {
    /* Custom Animation */
    from {
        transform: translateY(14px);
        opacity: .0;
    }
    to {
        transform: translateY(0px);
        opacity: 1;
    }
}

@media screen and (max-width:600px) {
    /* for website responsiveness in diff devices */
    .full-chat-block {
        width: 100%;
        border-radius: 0px;
    }
    .chat-bar-collapsible {
        position: fixed;
        bottom: 0;
        right: 0;
        width: 100%;
    }
    .collapsible {
        width: 100%;
        border: 0px;
        border-top: 3px solid white;
        border-radius: 0px;
    }
}
